<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    </head>
    <body>
        <form id="form-one" {{action "submitData" on="submit"}}>
            {{populateCampId}}
            <div class="sections">
                <div class="section-body">
                    <div class="error-message-div">
                        <center>
                                {{#if errorMessage}}
                                 <span class="" id="error-message">
                                    {{PopulateErrorMessage}}
                                </span>   
                                {{/if}}
                        </center>
                    </div>
                </div>
            <div class="container">
                {{#admin-menu-bar}}
                {{/admin-menu-bar}}
                <div class="form-container">
                    <div class="form-title">
                        <span>Edit Stock</span>
                        <i class="fa fa-edit" style="color:black"></i>
                    </div>
                    
                    <div class="form-field half-field">
                        <div class="form-field-label">
                            <span>Camp Id</span>
                        </div>
                        
                        <div class="form-field-value" id="camp-id-div">
                            {{input type="text" value=model.campId disabled="true"}}
                        </div>
                    </div>  

                    <div class="form-field half-field">
                        <div class="form-field-label">
                            <span>Actual Quantity</span>
                        </div>
                        
                        <div class="form-field-value" id="camp-id-div">
                            {{input type="text" value=model.Stock id="camp-id" disabled="true"}}
                        </div>
                    </div>  

                

                    <div class="form-field half-field">
                        <div class="form-field-label">
                            <span>Increase/Reduce the stock by</span>
                        </div>
                        <div class="form-field-value">
                            {{input type="text" required="true" value=quantity}}
                        </div>
                    </div> 

                    <div style="margin:20px 30px 30px ;padding:0px 10px 20px">
                        <span style="color:red; font-size: 15px;">Note</span>
                        <p style="padding:10px 0px 5px 0px;font-size: 15px"><i>If you want to increase the quantity then add '+'</i></p>
                        <p style="font-size: 15px"><i>If you want to reduce the quantity then add '-'</i></p>                         
                    </div>

                     <div class="form-body-footer">
                            <center>
                                <button class="primary-button">Submit</button>
                                <button class="secondary-button" {{action "clearData"}}>Cancel</button>
                            </center> 
                     </div> 

                </div>

                

            </div>

        </div>
        </form>
    </body>
</html>
{{outlet}}
